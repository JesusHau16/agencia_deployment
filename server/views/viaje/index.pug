extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")              
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i(class="fas fa-calendar-alt")
                    |  Fecha Ida: #{viaje.fecha_ida} - Fecha vuelta: #{viaje.fecha_vuelta}
                p
                    i(class="fas fa-dollar-sign")
                    |  #{viaje.precio} MXN
                p
                    i(class="fas fa-users")
                    |  #{viaje.disponibles} Disponibles
                p= viaje.descripcion